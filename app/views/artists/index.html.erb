<div class='col-md-12'>

  <div class="table-responsive">
    <h1 style="color:#666"> Our Cool Artists </h1>

    <table class="table table-hover">

      <tr class="small">
        <th> Artist Image </th>
        <th> Name </th>
        <th> Bio </th>
        <th> Actions </th>
      </tr>

      <!-- now rows for each artist, looping over artists -->
      <% @artists.each do |artist| %>
      <tr>
        <td> <%= artist.image_url %> </td>
        <td> <%= artist.name %> </td>
        <td> <%= artist.description %> </td>
        <td> Actions coming soon! </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
